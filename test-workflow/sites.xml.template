<?xml version="1.0" encoding="UTF-8"?>
<sitecatalog xmlns="http://pegasus.isi.edu/schema/sitecatalog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://pegasus.isi.edu/schema/sitecatalog http://pegasus.isi.edu/schema/sc-4.0.xsd" version="4.0">
    <!-- local -->
    <site  handle="local" arch="x86_64">
        <directory type="shared-scratch" path="$WORK_DIR/$RUN_ID">
            <file-server operation="all" url="file://$WORK_DIR/$RUN_ID"/>
        </directory>
        <directory type="local-storage" path="$WORK_DIR/outputs/$RUN_ID">
            <file-server operation="all" url="file://$WORK_DIR/outputs/$RUN_ID"/>
        </directory>
    </site>

    <!-- staging -->
    <site handle="origin" arch="x86_64" os="LINUX">
        <directory type="shared-scratch" path="/local-scratch/tanaka/data">
            <file-server operation="get" url="http://workflow.isi.edu/local-scratch/tanaka/data">
            <file-server operation="put" url="scp://workflow.isi.edu/local-scratch/tanaka/data">
        </directory>
    </site>

    <!-- execution -->
    <site  handle="condorpool" arch="x86_64" os="LINUX">
        <profile namespace="pegasus" key="style" >condor</profile>
        <profile namespace="condor" key="universe" >vanilla</profile>
    </site>
</sitecatalog>